<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.simonlee.widget.ScrollPickerView
        android:id="@+id/datepicker_year"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:gravity="center"
        app:spacing="-5dp"
        app:textColor_selected="@color/gray_dark"
        app:textColor_unselected="@color/gray_light_lv4"
        app:textFormat="2008"
        app:textRatio="1.8"
        app:textSize="18sp" />

    <cn.simonlee.widget.ScrollPickerView
        android:id="@+id/datepicker_month"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:gravity="center"
        app:loop="false"
        app:spacing="-5dp"
        app:textColor_selected="@color/gray_dark"
        app:textColor_unselected="@color/gray_light_lv4"
        app:textFormat="12"
        app:textRatio="1.8"
        app:textSize="18sp" />

    <cn.simonlee.widget.ScrollPickerView
        android:id="@+id/datepicker_day"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:gravity="center"
        app:spacing="-5dp"
        app:textColor_selected="@color/gray_dark"
        app:textColor_unselected="@color/gray_light_lv4"
        app:textFormat="31"
        app:textRatio="1.8"
        app:textSize="18sp" />

    <cn.simonlee.widget.ScrollPickerView
        android:id="@+id/datepicker_hour"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:gravity="center"
        app:spacing="-5dp"
        app:textColor_selected="@color/gray_dark"
        app:textColor_unselected="@color/gray_light_lv4"
        app:textFormat="24"
        app:textRatio="1.8"
        app:textSize="18sp" />

    <cn.simonlee.widget.ScrollPickerView
        android:id="@+id/datepicker_minute"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:gravity="center"
        app:spacing="-5dp"
        app:textColor_selected="@color/gray_dark"
        app:textColor_unselected="@color/gray_light_lv4"
        app:textFormat="59"
        app:textRatio="1.8"
        app:textSize="18sp" />
</LinearLayout>
