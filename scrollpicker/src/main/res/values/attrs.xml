<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--显示行数-->
    <attr name="rows" format="integer" />
    <!--行间距-->
    <attr name="spacing" format="reference|dimension" />

    <!--字体大小-->
    <attr name="textSize" format="reference|dimension" />
    <!--字体格式，宽度为wrap_content时用于计算宽度-->
    <attr name="textFormat" format="reference|string" />
    <!--字体放大倍数-->
    <attr name="textRatio" format="float" />

    <!--选中时字体颜色-->
    <attr name="textColor_selected" format="reference|color" />
    <!--未选中时字体颜色-->
    <attr name="textColor_unselected" format="reference|color" />

    <!--文本对齐方式（左、中、右）-->
    <attr name="gravity">
        <enum name="center" value="17" />
        <enum name="left" value="3" />
        <enum name="right" value="5" />
    </attr>

    <!--是否开启循环-->
    <attr name="loop" format="boolean" />

    <declare-styleable name="ScrollPickerView">
        <!--显示行数-->
        <attr name="rows" />
        <!--行间距-->
        <attr name="spacing" />
        <!--字体大小-->
        <attr name="textSize" />
        <!--字体格式，宽度为wrap_content时用于计算宽度-->
        <attr name="textFormat" />
        <!--字体放大倍数-->
        <attr name="textRatio" />
        <!--选中时字体颜色-->
        <attr name="textColor_selected" />
        <!--未选中时字体颜色-->
        <attr name="textColor_unselected" />
        <!--文本对齐方式（左、中、右）-->
        <attr name="gravity" />
        <!--是否开启循环-->
        <attr name="loop" />
    </declare-styleable>

</resources>