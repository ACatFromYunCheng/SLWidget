<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 浮标对齐方式 -->
    <attr name="gravity_badge">
        <flag name="left" value="1" />
        <flag name="top" value="2" />
        <flag name="right" value="4" />
        <flag name="bottom" value="8" />
        <flag name="center" value="16" />
    </attr>
    <!--浮标背景-->
    <attr name="background_badge" format="reference|color" />

    <!--浮标内边距-->
    <attr name="padding_badge" format="reference|dimension" />
    <!--浮标内左边距-->
    <attr name="paddingLeft_badge" format="reference|dimension" />
    <!--浮标内上边距-->
    <attr name="paddingTop_badge" format="reference|dimension" />
    <!--浮标内右边距-->
    <attr name="paddingRight_badge" format="reference|dimension" />
    <!--浮标内下边距-->
    <attr name="paddingBottom_badge" format="reference|dimension" />

    <!--浮标外边距-->
    <attr name="margin_badge" format="reference|dimension" />
    <!--浮标外左边距-->
    <attr name="marginLeft_badge" format="reference|dimension" />
    <!--浮标外上边距-->
    <attr name="marginTop_badge" format="reference|dimension" />
    <!--浮标外右边距-->
    <attr name="marginRight_badge" format="reference|dimension" />
    <!--浮标外下边距-->
    <attr name="marginBottom_badge" format="reference|dimension" />

    <!--浮标字体大小-->
    <attr name="textSize_badge" format="reference|dimension" />
    <!--浮标字体颜色-->
    <attr name="textColor_badge" format="reference|color" />
    <!--文本加粗-->
    <attr name="boldText_badge" format="boolean" />

    <declare-styleable name="Badge">

        <!--浮标对齐方式-->
        <attr name="gravity_badge" />
        <!--浮标背景-->
        <attr name="background_badge" />

        <!--浮标内边距-->
        <attr name="padding_badge" />
        <!--浮标内左边距-->
        <attr name="paddingLeft_badge" />
        <!--浮标内上边距-->
        <attr name="paddingTop_badge" />
        <!--浮标内右边距-->
        <attr name="paddingRight_badge" />
        <!--浮标内下边距-->
        <attr name="paddingBottom_badge" />

        <!--浮标外边距-->
        <attr name="margin_badge" />
        <!--浮标外左边距-->
        <attr name="marginLeft_badge" />
        <!--浮标外上边距-->
        <attr name="marginTop_badge" />
        <!--浮标外右边距-->
        <attr name="marginRight_badge" />
        <!--浮标外下边距-->
        <attr name="marginBottom_badge" />

        <!--字体大小-->
        <attr name="textSize_badge" />
        <!--字体颜色-->
        <attr name="textColor_badge" />
        <!--文本加粗-->
        <attr name="boldText_badge" />

    </declare-styleable>

</resources>